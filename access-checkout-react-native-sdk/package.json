{
  "name": "@worldpay/access-worldpay-checkout-react-native-sdk",
  "version": "4.0.0",
  "description": "Worldpay Access Checkout SDK for ReactNative",
  "repository": {
    "type": "git",
    "url": "https://github.com/Worldpay/access-checkout-react-native.git"
  },
  "author": "Worldpay",
  "license": "ISC",
  "scripts": {
    "prepare": "bob build",
    "typescript": "tsc --noEmit true",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{js,ts,tsx}\"",
    "format": "prettier '{src,test}/**/*.{ts,tsx}' --write",
    "test": "npm run typescript && jest --clearCache && jest --coverage --verbose"
  },
  "source": "./src/index.tsx",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android/com",
    "ios/AccessCheckoutReactNative",
    "access-checkout-react-native-sdk.podspec",
    "CHANGELOG.md",
    "README.md",
    "worldpay_logo.png",
    "*.podspec",
    "!ios/Pods",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!android/**/*Tests",
    "!**/test",
    "!**/.*"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli": "^18.0.0",
    "@react-native/babel-preset": "^0.73.0",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.0",
    "@react-native/typescript-config": "^0.73.1",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^27.0.3",
    "@types/node": "^18.19.84",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.6.3",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^13.0.0",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-native": "^0.73.0",
    "react-native-builder-bob": "^0.32.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": ">=18.1.0",
    "react-native": ">=0.70.0"
  },
  "engines": {
    "node": ">=18"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs"
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
